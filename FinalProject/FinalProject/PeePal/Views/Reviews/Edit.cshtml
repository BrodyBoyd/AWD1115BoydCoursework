<script>
    document.addEventListener("DOMContentLoaded", function () {

        const groups = document.querySelectorAll('.rating-group');

        groups.forEach(group => {
            const category = group.dataset.category;
            // Use numeric parse and robust NaN check
            const current = parseInt(group.dataset.current, 10);
            // Prefer selecting the hidden input in the same group directly
            const hiddenInput = group.querySelector('input[type="hidden"]');
            const stars = Array.from(group.querySelectorAll('.star'));

            // Pre-fill stars if model value exists
            if (!isNaN(current) && current > 0) {
                stars.forEach((s, i) => {
                    if (i < current) s.classList.add("fill-yellow-200");
                    else s.classList.remove("fill-yellow-200");
                });
                if (hiddenInput) hiddenInput.value = current;
            }

            // Click + keyboard handlers for editability & accessibility
            stars.forEach((star, index) => {
                // Make focusable and accessible attributes already set in markup; attach handlers
                star.addEventListener("click", () => {
                    const value = parseInt(star.dataset.value, 10);

                    stars.forEach((s, i) => {
                        if (i < value) s.classList.add("fill-yellow-200");
                        else s.classList.remove("fill-yellow-200");
                    });

                    if (hiddenInput) hiddenInput.value = value;
                });

                star.addEventListener("keydown", (e) => {
                    // Enter or Space activates selection
                    if (e.key === "Enter" || e.key === " ") {
                        e.preventDefault();
                        star.click();
                    }
                    // Arrow navigation between stars
                    if (e.key === "ArrowRight") {
                        e.preventDefault();
                        if (index < stars.length - 1) stars[index + 1].focus();
                    } else if (e.key === "ArrowLeft") {
                        e.preventDefault();
                        if (index > 0) stars[index - 1].focus();
                    }
                });
            });
        });

    });
</script>
