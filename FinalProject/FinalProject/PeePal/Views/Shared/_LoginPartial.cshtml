@using Microsoft.AspNetCore.Identity
@using PeePal.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="flex items-center gap-6">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="relative group">
            @{
                var currentUser = await UserManager.GetUserAsync(User);
            }

            <!-- Username trigger -->
            <button class="text-gray-800 font-medium hover:text-violet-600 transition text-2xl flex items-center gap-1">
                Hello @(currentUser?.ProfileUsername)!
                <svg class="w-4 h-4 transition-transform group-hover:rotate-180"
                     fill="none" stroke="currentColor" stroke-width="2"
                     viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M19 9l-7 7-7-7" />
                </svg>
            </button>

            <!-- Dropdown menu -->
            <div class="absolute right-0 mt-2 w-40 bg-violet-400/40 shadow-lg rounded-lg border border-gray-200
                    opacity-0 invisible group-hover:opacity-100 group-hover:visible
                    transition-all duration-200 z-50">

                <!-- View Account -->
                <a asp-area="Identity"
                   @* asp-page="/Account/Manage/Index" *@
                   class="block px-4 py-2  hover:bg-gray-100  transition text-black">
                    View Account
                </a>

                <!-- Logout -->
                <form asp-area="Identity"
                      asp-page="/Account/Logout"
                      asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit"
                            class="w-full text-left px-4 py-2  hover:bg-gray-100  transition text-black">
                        Logout
                    </button>
                </form>
            </div>
        </li>
    }
    else
    {
        <li>
            <a id="register"
               asp-area="Identity"
               asp-page="/Account/Register"
               class="text-gray-800 font-medium hover:text-violet-600 transition">
                Register
            </a>
        </li>

        <li>
            <a id="login"
               asp-area="Identity"
               asp-page="/Account/Login"
               class="text-gray-800 font-medium hover:text-violet-600 transition">
                Login
            </a>
        </li>
    }
</ul>