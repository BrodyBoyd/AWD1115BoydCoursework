@model PeePal.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<section class="py-24 px-6 bg-muted/50">
    <div class="max-w-4xl mx-auto bg-card rounded-2xl p-10 shadow-md">

        <!-- Header -->
        <h1 class="font-display text-3xl sm:text-4xl font-extrabold text-red-600 text-center">
            Delete Review
        </h1>

        <p class="mt-3 text-center text-muted-foreground">
            Are you sure you want to permanently remove this review?
        </p>

        <!-- Review Summary -->
        <div class="mt-10 grid grid-cols-1 sm:grid-cols-2 gap-8">

            <!-- Address -->
            <div>
                <p class="text-sm font-semibold text-muted-foreground uppercase">Address</p>
                <p class="mt-1 text-lg text-card-foreground">
                    @($"{Model.Street}, {Model.City}, {Model.State} {Model.Zip}")
                </p>
            </div>

            <!-- Restroom Name -->
            <div>
                <p class="text-sm font-semibold text-muted-foreground uppercase">Restroom Name</p>
                <p class="mt-1 text-lg text-card-foreground">@Model.name</p>
            </div>

            <!-- Ratings -->
            @foreach (var rating in new[]
                        {
                        new { Label = "Smell", Value = Model.Smell },
                        new { Label = "Cleanliness", Value = Model.Cleanliness },
                        new { Label = "Privacy", Value = Model.Privacy },
                        new { Label = "Comfort", Value = Model.Comfort },
                        new { Label = "Availability", Value = Model.Availability }
                        })
            {
                <div>
                    <p class="text-sm font-semibold text-muted-foreground uppercase">@rating.Label</p>

                    <div class="flex items-center gap-1 mt-2">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <svg class="h-5 w-5 @(i <= rating.Value ? "fill-yellow-300" : "fill-gray-300")"
                                 viewBox="0 0 1024 1024">
                                <path d="M575.85 115.43L661.09 288.05c10.13 20.47 29.68 34.69 52.29 37.96l190.43 27.63c56.99 8.29 79.71 78.28 38.48 118.5L804.35 606.49c-16.37 15.96-23.84 38.99-19.95 61.5l32.54 189.72c9.72 56.79-49.83 100.08-100.79 73.27L545.87 841.45a69.49 69.49 0 0 0-64.67 0l-170.38 89.54c-50.96 26.81-110.51-16.47-100.79-73.27l32.54-189.72c3.89-22.51-3.58-45.54-19.95-61.5L84.78 472.25c-41.24-40.22-18.52-110.21 38.48-118.5l190.43-27.63c22.61-3.27 42.16-17.5 52.29-37.96L451.32 115.43c25.48-51.68 99.05-51.68 124.53 0"></path>
                            </svg>
                        }
                    </div>
                </div>
            }

            <!-- Likes -->
            <div>
                <p class="text-sm font-semibold text-muted-foreground uppercase">Likes</p>
                <p class="mt-1 text-lg text-card-foreground">@Model.Likes</p>
            </div>

            <!-- Dislikes -->
            <div>
                <p class="text-sm font-semibold text-muted-foreground uppercase">Dislikes</p>
                <p class="mt-1 text-lg text-card-foreground">@Model.Dislikes</p>
            </div>



            <!-- Notes -->
            <div>
                <p class="text-sm font-semibold text-muted-foreground uppercase">Notes</p>
                <p class="mt-1 text-lg text-card-foreground">@Model.Notes</p>
            </div>

            <!-- Date Submitted -->
            <div>
                <p class="text-sm font-semibold text-muted-foreground uppercase">Date Submitted</p>
                <p class="mt-1 text-lg text-card-foreground">@Model.DateSubmitted.ToShortDateString()</p>
            </div>

            <!-- User -->
            <div>
                <p class="text-sm font-semibold text-muted-foreground uppercase">Submitted By</p>
                <p class="mt-1 text-lg text-card-foreground">@Model.User?.ProfileUsername</p>
            </div>
        </div>

        <!-- Actions -->
        <form asp-action="Delete" class="mt-10 flex justify-center gap-4">
            <input type="hidden" asp-for="ReviewId" />

            <button type="submit"
                    class="px-8 py-3 rounded-full bg-red-600 text-white font-semibold hover:bg-red-700 transition">
                Delete Review
            </button>

            <a asp-action="Index"
               class="px-8 py-3 rounded-full border border-border text-foreground hover:bg-muted transition">
                Cancel
            </a>
        </form>

    </div>
</section>