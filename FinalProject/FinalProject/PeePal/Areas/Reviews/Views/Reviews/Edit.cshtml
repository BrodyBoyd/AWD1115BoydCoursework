@model PeePal.Models.Review

@{
    ViewData["Title"] = "Edit Review";
}

<section class="py-24 px-6 bg-muted/50">
    <div class="max-w-4xl mx-auto bg-card rounded-2xl p-10 shadow-md">

        <!-- Header -->
        <h1 class="font-display text-3xl sm:text-4xl font-bold text-card-foreground text-center">
            Edit Review
        </h1>

        <form asp-action="Edit" class="mt-10 space-y-8">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>
            <input type="hidden" asp-for="ReviewId" />

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

                <!-- Left Column -->
                <div class="space-y-6">

                    <!-- Address Block -->
                    <div class="space-y-4">
                        <label class="block text-sm font-medium text-card-foreground">Address</label>

                        <input asp-for="Street"
                               class="w-full rounded-lg border border-border px-4 py-2 focus:ring-2 focus:ring-primary"
                               placeholder="Street address" />

                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <input asp-for="City"
                                   class="w-full rounded-lg border border-border px-4 py-2 focus:ring-2 focus:ring-primary"
                                   placeholder="City" />

                            <input asp-for="State"
                                   class="w-full rounded-lg border border-border px-4 py-2 focus:ring-2 focus:ring-primary"
                                   placeholder="State (e.g., MO)" />
                        </div>

                        <input asp-for="Zip"
                               class="w-full rounded-lg border border-border px-4 py-2 focus:ring-2 focus:ring-primary"
                               placeholder="ZIP Code" />
                    </div>

                    <!-- Restroom Name -->
                    <div>
                        <label asp-for="name" class="block text-sm font-medium text-card-foreground">Restroom Name</label>
                        <input asp-for="name"
                               class="w-full mt-2 rounded-lg border border-border px-4 py-2 focus:ring-2 focus:ring-primary" />
                        <span asp-validation-for="name" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Likes -->
                    <div>
                        <label asp-for="Likes" class="block text-sm font-medium text-card-foreground">Likes</label>
                        <input asp-for="Likes"
                               class="w-full mt-2 rounded-lg border border-border px-4 py-2" />
                    </div>

                    <!-- Dislikes -->
                    <div>
                        <label asp-for="Dislikes" class="block text-sm font-medium text-card-foreground">Dislikes</label>
                        <input asp-for="Dislikes"
                               class="w-full mt-2 rounded-lg border border-border px-4 py-2" />
                    </div>

                    <!-- Notes -->
                    <div>
                        <label asp-for="Notes" class="block text-sm font-medium text-card-foreground">Notes</label>
                        <input asp-for="Notes"
                               class="w-full mt-2 rounded-lg border border-border px-4 py-2" />
                    </div>
                </div>

                <!-- Right Column: Ratings -->
                <div class="space-y-8">
                    @foreach (var cat in new[]
                                        {
                                        new { Name = "Smell", Value = Model.Smell },
                                        new { Name = "Cleanliness", Value = Model.Cleanliness },
                                        new { Name = "Privacy", Value = Model.Privacy },
                                        new { Name = "Comfort", Value = Model.Comfort },
                                        new { Name = "Availability", Value = Model.Availability }
                                        })
                    {
                        <div>
                            <label class="block text-sm font-medium text-card-foreground">@cat.Name</label>

                            <div class="mt-2 flex items-center gap-3 rating"
                                 data-category="@cat.Name"
                                 data-current="@cat.Value">

                                @for (int i = 1; i <= 5; i++)
                                {
                                    var filled = i <= cat.Value ? "fill-yellow-300" : "fill-gray-300";
                                    <svg data-value="@i"
                                         class="h-8 w-8 cursor-pointer @filled"
                                         viewBox="0 0 1024 1024">
                                        <path d="M575.85 115.43L661.09 288.05c10.13 20.47 29.68 34.69 52.29 37.96l190.43 27.63c56.99 8.29 79.71 78.28 38.48 118.5L804.35 606.49c-16.37 15.96-23.84 38.99-19.95 61.5l32.54 189.72c9.72 56.79-49.83 100.08-100.79 73.27L545.87 841.45a69.49 69.49 0 0 0-64.67 0l-170.38 89.54c-50.96 26.81-110.51-16.47-100.79-73.27l32.54-189.72c3.89-22.51-3.58-45.54-19.95-61.5L84.78 472.25c-41.24-40.22-18.52-110.21 38.48-118.5l190.43-27.63c22.61-3.27 42.16-17.5 52.29-37.96L451.32 115.43c25.48-51.68 99.05-51.68 124.53 0"></path>
                                    </svg>
                                }
                            </div>

                            <input type="hidden" name="@cat.Name" value="@cat.Value" />
                        </div>
                    }

                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="DateSubmitted" />
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit"
                    class="w-full py-3 rounded-full bg-primary text-primary-foreground font-semibold hover:opacity-90 transition">
                Save Changes
            </button>
        </form>

        <!-- Back Link -->
        <div class="mt-6 text-center">
            <a asp-action="Index" class="text-sm text-primary hover:underline">Back to List</a>
        </div>

    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        document.querySelectorAll('.rating').forEach(group => {
            const current = parseInt(group.dataset.current || '0', 10);
            const svgs = Array.from(group.querySelectorAll('svg'));

            // Initialize
            svgs.forEach((s, i) => s.classList.toggle('fill-yellow-300', i < current));

            // Click behavior
            svgs.forEach((s, i) => s.addEventListener('click', () => {
                svgs.forEach((x, idx) => x.classList.toggle('fill-yellow-300', idx <= i));
                const name = group.dataset.category;
                const input = document.querySelector(`input[name="${name}"]`);
                if (input) input.value = i + 1;
            }));
        });
    });
</script>

@section Scripts {
        { await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}