@model PeePal.Models.Review

@{
    ViewData["Title"] = "Create Review";
}

<section class="py-16 px-6 bg-muted/50">
    <div class="max-w-4xl mx-auto bg-card rounded-2xl p-8 shadow-md">
        <h1 class="font-display text-3xl sm:text-4xl font-bold text-card-foreground">Rate a Restroom</h1>
        <p class="mt-3 text-muted-foreground">Give us some information for other users to see.</p>

        <form asp-action="Create" method="post" class="mt-8 space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-card-foreground">Select Bathroom</label>
                    <select asp-for="BathroomId" asp-items="ViewBag.BathroomId" class="w-full rounded-lg border border-border px-4 py-2">
                        <option value="">-- choose existing bathroom --</option>
                    </select>
                    <p class="text-xs text-muted-foreground mt-2">If the bathroom isn't listed, create it from the Bathrooms admin area first.</p>
                </div>

                <!-- Or create a new bathroom inline -->
                <div class="col-span-2 mt-4 p-4 border border-dashed rounded-md">
                    <h4 class="text-sm font-semibold mb-2">Or add a new bathroom</h4>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                        <div>
                            <label class="block text-xs text-muted-foreground">Name</label>
                            <input name="NewBathroomName" class="w-full rounded-lg border border-border px-3 py-2" placeholder="e.g. Joe's Cafe Restroom" />
                        </div>
                        <div>
                            <label class="block text-xs text-muted-foreground">ZIP</label>
                            <input name="NewBathroomZip" class="w-full rounded-lg border border-border px-3 py-2" placeholder="ZIP" />
                        </div>
                        <div class="sm:col-span-2">
                            <label class="block text-xs text-muted-foreground">Street</label>
                            <input name="NewBathroomStreet" class="w-full rounded-lg border border-border px-3 py-2" placeholder="Street address" />
                        </div>
                        <div>
                            <label class="block text-xs text-muted-foreground">City</label>
                            <input name="NewBathroomCity" class="w-full rounded-lg border border-border px-3 py-2" placeholder="City" />
                        </div>
                        <div>
                            <label class="block text-xs text-muted-foreground">State</label>
                            <input name="NewBathroomState" class="w-full rounded-lg border border-border px-3 py-2" placeholder="State" />
                        </div>
                    </div>
                    <p class="text-xs text-muted-foreground mt-2">Provide at least a name and street to create a new bathroom. Coordinates will be looked up automatically.</p>
                </div>

                    <!-- Likes -->
                    <div>
                        <label asp-for="Likes" class="block text-sm font-medium text-card-foreground">Likes</label>
                        <input asp-for="Likes"
                               class="w-full mt-2 rounded-lg border border-border px-4 py-2" />
                        <span asp-validation-for="Likes" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Dislikes -->
                    <div>
                        <label asp-for="Dislikes" class="block text-sm font-medium text-card-foreground">Dislikes</label>
                        <input asp-for="Dislikes"
                               class="w-full mt-2 rounded-lg border border-border px-4 py-2" />
                        <span asp-validation-for="Dislikes" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Notes -->
                    <div>
                        <label asp-for="Notes" class="block text-sm font-medium text-card-foreground">Other Notes</label>
                        <input asp-for="Notes"
                               class="w-full mt-2 rounded-lg border border-border px-4 py-2" />
                        <span asp-validation-for="Notes" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <!-- Ratings -->
                <div class="space-y-6">
                    @foreach (var cat in new[] { "Availability", "Cleanliness", "Smell", "Privacy", "Comfort" })
                    {
                        <div>
                            <label class="block text-sm font-medium text-card-foreground">@cat</label>
                            <div class="mt-2 flex items-center gap-3 rating" data-category="@cat">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <svg data-value="@i" class="h-8 w-8 cursor-pointer fill-gray-300" viewBox="0 0 1024 1024">
                                        <path d="M575.85 115.43L661.09 288.05c10.13 20.47 29.68 34.69 52.29 37.96l190.43 27.63c56.99 8.29 79.71 78.28 38.48 118.5L804.35 606.49c-16.37 15.96-23.84 38.99-19.95 61.5l32.54 189.72c9.72 56.79-49.83 100.08-100.79 73.27L545.87 841.45a69.49 69.49 0 0 0-64.67 0l-170.38 89.54c-50.96 26.81-110.51-16.47-100.79-73.27l32.54-189.72c3.89-22.51-3.58-45.54-19.95-61.5L84.78 472.25c-41.24-40.22-18.52-110.21 38.48-118.5l190.43-27.63c22.61-3.27 42.16-17.5 52.29-37.96L451.32 115.43c25.48-51.68 99.05-51.68 124.53 0z"></path>
                                    </svg>
                                }
                            </div>
                            <input type="hidden" name="@cat" />
                        </div>
                    }

                    <input type="hidden" asp-for="UserId" />
                </div>

            <div class="pt-4">
                <button type="submit"
                        class="w-full py-3 rounded-full bg-primary text-primary-foreground font-semibold">
                    Submit Review
                </button>
            </div>
        </form>

        <div class="mt-4">
            <a asp-action="Index" class="text-sm text-primary hover:underline">Back to List</a>
        </div>
    </div>
</section>

<script>
    document.querySelectorAll('.rating').forEach(group => {
        const svgs = Array.from(group.querySelectorAll('svg'));
        svgs.forEach((s, i) => s.addEventListener('click', () => {
            svgs.forEach((x, idx) => x.classList.toggle('fill-yellow-300', idx <= i));
            const name = group.dataset.category;
            const input = document.querySelector(`input[name="${name}"]`);
            if (input) input.value = i + 1;
        }));
    });
</script> 
