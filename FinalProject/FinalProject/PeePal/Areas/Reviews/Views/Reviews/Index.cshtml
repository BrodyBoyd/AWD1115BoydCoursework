@model IEnumerable<PeePal.Models.Bathroom>

@{
    ViewData["Title"] = "Restroom Reviews";
}

<section class="py-20 px-6 bg-muted/50 min-h-screen">
    <div class="max-w-6xl mx-auto">

        <div class="flex items-center justify-between mb-12">
            <h1 class="font-display text-4xl font-bold text-foreground">Restroom Reviews</h1>

            <a asp-action="Create"
               class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-primary text-primary-foreground font-semibold shadow-sm hover:opacity-90 transition">
                + Create New
            </a>
        </div>

        <div class="space-y-8">
            @foreach (var bathroom in Model)
            {
                <section class="bg-card border border-border rounded-2xl p-6 shadow-md">
                    <header class="flex items-start justify-between">
                        <div>
                            <h2 class="text-2xl font-bold text-card-foreground">@bathroom.Name</h2>
                            <p class="text-sm text-muted-foreground mt-1">@($"{bathroom.Street}, {bathroom.City}, {bathroom.State} {bathroom.Zip}")</p>
                        </div>

                        <div class="text-right">
                            @{
                                var avg = bathroom.Reviews != null && bathroom.Reviews.Any()
                                    ? Math.Round(bathroom.Reviews.Average(r => r.AverageScore), 1)
                                    : 0.0;
                            }
                            <div class="text-sm text-muted-foreground">Average</div>
                            <div class="text-xl font-semibold">@avg</div>
                        </div>
                    </header>

                    <div class="mt-6 grid md:grid-cols-2 gap-6">
                        @if (bathroom.Reviews != null && bathroom.Reviews.Any())
                        {
                            @foreach (var review in bathroom.Reviews)
                            {
                                <article class="bg-muted/20 rounded-lg p-4">
                                    <div class="flex items-center justify-between mb-2">
                                        <div class="text-sm text-muted-foreground">Submitted</div>
                                        <div class="text-sm">@review.DateSubmitted.ToShortDateString()</div>
                                    </div>

                                    <div class="text-sm grid grid-cols-2 gap-y-2">
                                        <div class="text-muted-foreground">Smell</div>
                                        <div class="font-medium">@review.Smell</div>

                                        <div class="text-muted-foreground">Cleanliness</div>
                                        <div class="font-medium">@review.Cleanliness</div>

                                        <div class="text-muted-foreground">Privacy</div>
                                        <div class="font-medium">@review.Privacy</div>

                                        <div class="text-muted-foreground">Comfort</div>
                                        <div class="font-medium">@review.Comfort</div>

                                        <div class="text-muted-foreground">Availability</div>
                                        <div class="font-medium">@review.Availability</div>
                                    </div>

                                    <div class="mt-4 flex gap-2">
                                        <a asp-action="Details" asp-route-id="@review.ReviewId" class="px-3 py-1 rounded-full border text-sm">Details</a>
                                        <a asp-action="Edit" asp-route-id="@review.ReviewId" class="px-3 py-1 rounded-full bg-primary text-primary-foreground text-sm">Edit</a>
                                    </div>
                                </article>
                            }
                        }
                        else
                        {
                            <div class="text-sm text-muted-foreground">No reviews yet for this bathroom.</div>
                        }
                    </div>
                </section>
            }
        </div>

    </div>
</section>
