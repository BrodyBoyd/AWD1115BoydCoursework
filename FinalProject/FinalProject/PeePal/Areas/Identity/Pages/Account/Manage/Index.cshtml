@page
@model PeePal.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Account";
}

<section class="min-h-screen flex items-center justify-center bg-gray-50 relative">

    <!-- PeePal background blobs -->
    <div class="absolute -top-20 -left-20 w-72 h-72 bg-purple-500/30 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-80 h-80 bg-violet-400/20 rounded-full blur-3xl"></div>

    <div class="relative z-10 w-full max-w-3xl mx-auto p-8">
        <div class="bg-white shadow-xl rounded-2xl p-8 border border-gray-200">
            <h2 class="text-3xl font-bold text-gray-900 text-center mb-6">Your Account</h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm text-gray-600">Username</label>
                    <div class="mt-1 text-lg font-medium text-gray-900">@Model.Username</div>
                </div>

                <div>
                    <label class="block text-sm text-gray-600">Full name</label>
                    <div class="mt-1 text-lg font-medium text-gray-900">@Model.FullName</div>
                </div>

                <div>
                    <label class="block text-sm text-gray-600">Email</label>
                    <div class="mt-1 text-lg font-medium text-gray-900">@Model.Email</div>
                </div>

                <div>
                    <label class="block text-sm text-gray-600">Email Confirmed</label>
                    <div class="mt-1 text-lg font-medium text-gray-900">@Model.EmailConfirmed</div>
                </div>
            </div>

            <div class="mt-8 flex flex-col md:flex-row gap-4">
                <a asp-page="./ChangePassword" class="inline-block w-full md:w-auto py-2 px-4 bg-violet-600 text-white rounded-lg hover:bg-violet-700 transition text-center">Change password</a>
                <a asp-page="./Index" class="inline-block w-full md:w-auto py-2 px-4 border border-gray-300 rounded-lg hover:bg-gray-50 transition text-center">Edit profile</a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
