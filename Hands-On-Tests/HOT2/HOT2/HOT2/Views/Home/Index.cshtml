@model IEnumerable<Product>

<div class="min-h-screen bg-gray-100 pt-19 pb-10">

    <!-- Header -->
    <header class="max-w-5xl mx-auto text-center mb-10">
        <h1 class="text-5xl font-extrabold text-gray-800 tracking-tight">
            The Product Store
        </h1>
        <p class="text-gray-500 mt-2 text-lg">Browse, manage, and explore your inventory</p>

        <a asp-action="AddEdit"
           class="inline-block mt-6 px-6 py-3 bg-blue-600 text-white font-semibold rounded-xl shadow-md hover:bg-blue-700 transition">
            + Add Product
        </a>
    </header>

    <!-- Table Container -->
    <div class="max-w-6xl mx-auto bg-white shadow-xl rounded-xl overflow-hidden border border-gray-200">

        <table class="w-full text-left">
            <thead class="bg-gray-50 border-b">
                <tr>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-700">Name</th>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-700">Description</th>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-700">Image</th>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-700">Price</th>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-700">Quantity</th>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-700">Category</th>

                </tr>
            </thead>

            <tbody class="divide-y divide-gray-100">
                @foreach (var product in Model)
                {
                    <tr class="hover:bg-gray-50 transition">
                        <td class="px-6 py-4 font-medium text-gray-900">
                            <a asp-action="Details"
                               asp-route-id="@product.ProductId"
                               asp-route-slug="@product.Slug"
                               class="text-blue-600 hover:underline">
                                @product.Name
                            </a>
                        </td>

                        <td class="px-6 py-4 text-gray-700">
                            <a asp-action="Details"
                               asp-route-id="@product.ProductId"
                               asp-route-slug="@product.Slug"
                               class="text-blue-600 hover:underline">
                                @product.Description
                            </a>
                        </td>

                        <td class="px-6 py-4">
                            <img src="~/images/@product.ImageUrl"
                                 alt="@product.ImageUrl"
                                 class="w-12 h-12 object-cover rounded-md shadow-sm border" />
                        </td>

                        <td class="px-6 py-4 text-gray-800 font-semibold">
                            $@product.Price
                        </td>

                        <td class="px-6 py-4 text-gray-800">
                            @product.Quantity
                        </td>
                        <td class="px-6 py-4 text-gray-800">
                            @product.Category?.CategoryName
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>