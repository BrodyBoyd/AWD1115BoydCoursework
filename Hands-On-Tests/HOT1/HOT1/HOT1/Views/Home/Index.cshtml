@model DistanceConverter

<header class="bg-gray-100 rounded-xl shadow p-6 mb-8">
    <h1 class="text-blue-700 text-5xl font-extrabold text-center tracking-wide">
        Distance Converter
    </h1>
</header>

<form asp-action="Index" method="post"
      class="max-w-xl w-full bg-white shadow-lg rounded-xl p-8 mx-auto space-y-6">
    <div class="flex flex-col">
        <label asp-for="Inches" class="text-xl font-semibold mb-1">Distance in Inches</label>
        <input asp-for="Inches"
               class="border border-gray-400 bg-gray-100 rounded-md p-2 focus:ring-2 focus:ring-blue-400" />
        <span asp-validation-for="Inches" class="text-red-500 text-sm mt-1"></span>
    </div>
    <div class="flex justify-center">
        <button type="submit"
                class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow">
            Convert to Cm
        </button>
    </div>
    @if (ViewBag.Inches > 0)
    {
        <p class="text-xl font-semibold text-center bg-blue-50 border border-blue-200 rounded-lg p-4">
            @ViewBag.Inches inches is <span class="text-blue-700">@ViewBag.CmLength</span> centimeters
        </p>
    }
</form>