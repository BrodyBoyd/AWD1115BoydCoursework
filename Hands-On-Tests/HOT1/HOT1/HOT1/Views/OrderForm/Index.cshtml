@model OrderForm

<header class="bg-gray-100 rounded-xl shadow p-6 mb-8">
    <h1 class="text-blue-700 text-5xl font-extrabold text-center tracking-wide">
        Order Form
    </h1>
</header>

<form asp-action="Index" method="post"
      class="max-w-xl w-full bg-white shadow-lg rounded-xl p-8 mx-auto space-y-6">

    <!-- Quantity -->
    <div class="flex flex-col">
        <label asp-for="Quantity" class="text-xl font-semibold mb-1">Quantity</label>
        <input asp-for="Quantity"
               class="border border-gray-400 bg-gray-100 rounded-md p-2 focus:ring-2 focus:ring-blue-400" />
        <span asp-validation-for="Quantity" class="text-red-500 text-sm mt-1"></span>
    </div>

    <div class="flex flex-col">
        <label asp-for="DiscountCode" class="text-xl font-semibold mb-1">Discount Code</label>
        <input asp-for="DiscountCode"
               class="border border-gray-400 bg-gray-100 rounded-md p-2 focus:ring-2 focus:ring-blue-400" />

        @if (ViewBag.CodeResponse == "* Invalid Discount Code")
        {
            <p class="text-red-500 text-sm mt-1">@ViewBag.CodeResponse</p>
        }
        else
        {
            <p class="text-green-600 text-sm mt-1">@ViewBag.CodeResponse</p>
        }
    </div>

    <div class="flex justify-center">
        <button type="submit"
                class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow">
            Order
        </button>
    </div>

    <textarea class="w-full h-40 border border-gray-300 rounded-lg p-3 bg-gray-50"
              readonly>@ViewBag.Response</textarea>
</form>