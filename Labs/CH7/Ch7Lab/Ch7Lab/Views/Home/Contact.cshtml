<div class="text-center py-24 px-6">

    <h1 class="text-7xl font-extrabold tracking-tight mb-6">
        Contact me
    </h1>

    <div class="text-gray-500 text-xl max-w-2xl mx-auto mb-10">
        <div class="grid grid-cols-3 gap-4 border-b border-gray-800/20 py-2">
            <span class="font-semibold">Phone:</span>
            <span class="col-span-2">@ViewBag.Phone</span>
        </div>

        <div class="grid grid-cols-3 gap-4 border-b border-gray-800/20 py-2">
            <span class="font-semibold">Email:</span>
            <span class="col-span-2">@ViewBag.Email</span>
        </div>

        <div class="grid grid-cols-3 gap-4 border-b border-gray-800/20 py-2">
            <span class="font-semibold">Facebook:</span>
            <span class="col-span-2">@ViewBag.Facebook</span>
        </div>
    </div>

</div>