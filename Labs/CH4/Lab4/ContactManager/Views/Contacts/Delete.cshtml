@model Contact

<h1 class="bg-gray-700 text-blue-100 p-4 text-6xl font-bold text-center">Contact Details</h1>
<div>
    <div class="max-w-96 w-full mx-auto bg-white shadow-lg rounded-lg p-6 mt-6 border border-gray-800/20">
        <h1 class="text-4xl font-bold mb-4 text-red-500">Delete Contact</h1>
        <p class=" mb-4">Are you sure you want to delete this contact?</p> 
        <h2 class="text-3xl font-bold mb-4">@Model.FirstName @Model.LastName</h2>
        <p class="text-lg mb-2 border-b border-blue-900/20"><strong>Phone:</strong> @Model.PhoneNumber</p>
        <p class="text-lg mb-2 border-b border-blue-900/20"><strong>Email:</strong> @Model.Email</p>
        <p class="text-lg mb-2 border-b border-blue-900/20"><strong>Category:</strong> @Model.Category</p>
        <form asp-action="Delete" class="flex">
            <input type="hidden" asp-for="ContactId" />
            <button type="submit" class="mt-2 p-2 bg-red-400 font-semibold rounded-xl shadow-xl border items-center block mx-auto max-w-50 hover:bg-red-600 hover:cursor-pointer">
                Delete
            </button>
            <a asp-action="Index" class="mt-2 p-2 bg-blue-200 font-semibold rounded-xl shadow-xl border items-center block mx-auto max-w-50 hover:bg-blue-400">Back to List</a>

        </form>
    </div>
</div>