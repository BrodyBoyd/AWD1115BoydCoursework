@model TripViewModel

<div class="min-h-screen flex items-center justify-center bg-gray-100 py-10">
    <div class="w-full max-w-xl bg-white shadow-lg rounded-2xl p-8">

        <h1 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-3">
            Add Things To Do In @TempData.Peek("Destination")
        </h1>

        <form asp-action="Add" class="space-y-6">
            <div asp-validation-summary="All"></div>

            <input type="hidden" asp-for="PageNumber" />
            <input type="hidden" asp-for="Trip.Destination" />
            <input type="hidden" asp-for="Trip.Accommodation" />
            <input type="hidden" asp-for="Trip.StartDate" />
            <input type="hidden" asp-for="Trip.EndDate" />
            <input type="hidden" asp-for="Trip.AccommodationEmail" />
            <input type="hidden" asp-for="Trip.AccommodationPhone" />
            <div>
                <label asp-for="Trip.Activity1" class="block text-sm font-medium text-gray-700">Activity 1</label>
                <input asp-for="Trip.Activity1"
                       class="w-full mt-2 rounded-lg border border-gray-300 px-4 py-2 focus:ring-2 focus:ring-blue-500" />
            </div>

            <div>
                <label asp-for="Trip.Activity2" class="block text-sm font-medium text-gray-700">Activity 2</label>
                <input asp-for="Trip.Activity2"
                       class="w-full mt-2 rounded-lg border border-gray-300 px-4 py-2 focus:ring-2 focus:ring-blue-500" />
            </div>

            <div>
                <label asp-for="Trip.Activity3" class="block text-sm font-medium text-gray-700">Activity 3</label>
                <input asp-for="Trip.Activity3"
                       class="w-full mt-2 rounded-lg border border-gray-300 px-4 py-2 focus:ring-2 focus:ring-blue-500" />
            </div>

            <div class="flex justify-between pt-6 border-t mt-6">

                <button type="submit"
                        class="px-5 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow
                   hover:bg-blue-700 transition">
                    Save
                </button>

                <a asp-controller="Home" asp-action="Index"
                   class="px-5 py-2 bg-gray-200 text-gray-800 font-semibold rounded-lg shadow
              hover:bg-gray-300 transition">
                    Cancel
                </a>

            </div>

        </form>

    </div>
</div>