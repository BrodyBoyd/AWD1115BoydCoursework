@model PriceQuotationCalculator
<header class="p-14 bg-green-600 text-center rounded-md mb-3 flex  gap-4 ">
    <i class="fa-solid fa-money-bill-wave text-white text-5xl md:text-8xl"></i>
    <h1 class="text-white text-5xl md:text-8xl">Price Quotation</h1>
</header>
<form asp-action="Index" method="post" class="pl-3">
    <div class="flex md:flex-row flex-col form-group">
        <label asp-for="Subtotal">Subtotal:</label>
        <input asp-for="Subtotal" class="border-2 border-black bg-gray-200 rounded-md w-50 md:ml-24" />
        <span asp-validation-for="Subtotal" class="text-red-400 ml-2"></span>
    </div>
    <div class="flex md:flex-row flex-col form-group">
        <label asp-for="DiscountPercent">Discount Percent:</label>
        <input asp-for="DiscountPercent" class="border-2 border-black bg-gray-200 rounded-md w-50 md:ml-9"/>
        <span asp-validation-for="DiscountPercent" class="text-red-400 ml-2"></span>
    </div>
    <div class="flex md:flex-row flex-col form-group">
        <label>Discount Amount:</label>
        <input readonly placeholder="$0.00" value="@ViewBag.DiscountAmount?.ToString("c2")" class=" w-50 md:ml-8" />
        <div class="text-red-400 "></div>
    </div>
    <div class="flex md:flex-row flex-col form-group">
        <label>Total:</label>
        <input readonly placeholder="$0.00" value="@ViewBag.Total?.ToString("c2")" class=" md:ml-30" />
        <div class="text-red-400"></div>
    </div>
    <div class="flex flex-row gap-5">
        <button class="p-2 bg-green-600 text-white rounded-xl border-2" type="submit">Calculate</button>
        <a asp-action="Index" class="p-2 bg-green-600 text-white rounded-xl border-2">Clear</a>
    </div>
</form>
