@model RoulettePlayer

<div class="min-h-screen bg-[#0b5c2b] text-white p-6">

    <!-- Header -->
    <header class="text-center mb-10">
        <h1 class="text-5xl font-extrabold tracking-widest drop-shadow-lg">
            AMERICAN ROULETTE
        </h1>
        <p class="text-xl opacity-90 mt-2">Place your bets</p>
    </header>

    <!-- Main Layout -->
    <div class="flex flex-col lg:flex-row gap-10 justify-center">

        <!-- Left: Roulette Table -->
        <div class="bg-[#064422] border-4 border-white rounded-xl p-6 shadow-2xl">

            <!-- Your existing table (unchanged) -->
            <table class="roulette-table mx-auto">

                <!-- 00 and 0 -->
                <tr>
                    <td class="zero" rowspan="3" onclick="placeBet('00')">00</td>
                    <td class="zero" rowspan="3" onclick="placeBet('0')">0</td>

                    <!-- Row 1: 3, 6, 9 ... 36 -->
                    <td class="red" onclick="placeBet('3')">3</td>
                    <td class="black" onclick="placeBet('6')">6</td>
                    <td class="red" onclick="placeBet('9')">9</td>
                    <td class="red" onclick="placeBet('12')">12</td>
                    <td class="black" onclick="placeBet('15')">15</td>
                    <td class="red" onclick="placeBet('18')">18</td>
                    <td class="red" onclick="placeBet('21')">21</td>
                    <td class="black" onclick="placeBet('24')">24</td>
                    <td class="red" onclick="placeBet('27')">27</td>
                    <td class="red" onclick="placeBet('30')">30</td>
                    <td class="black" onclick="placeBet('33')">33</td>
                    <td class="red" onclick="placeBet('36')">36</td>
                    <td class="outside label">2 to 1</td>
                </tr>

                <!-- Row 2: 2, 5, 8 ... 35 -->
                <tr>
                    <td class="black" onclick="placeBet('2')">2</td>
                    <td class="red" onclick="placeBet('5')">5</td>
                    <td class="black" onclick="placeBet('8')">8</td>
                    <td class="black" onclick="placeBet('11')">11</td>
                    <td class="red" onclick="placeBet('14')">14</td>
                    <td class="black" onclick="placeBet('17')">17</td>
                    <td class="black" onclick="placeBet('20')">20</td>
                    <td class="red" onclick="placeBet('23')">23</td>
                    <td class="black" onclick="placeBet('26')">26</td>
                    <td class="black" onclick="placeBet('29')">29</td>
                    <td class="red" onclick="placeBet('32')">32</td>
                    <td class="black" onclick="placeBet('35')">35</td>
                    <td class="outside label">2 to 1</td>
                </tr>

                <!-- Row 3: 1, 4, 7 ... 34 -->
                <tr>
                    <td class="red" onclick="placeBet('1')">1</td>
                    <td class="black" onclick="placeBet('4')">4</td>
                    <td class="red" onclick="placeBet('7')">7</td>
                    <td class="black" onclick="placeBet('10')">10</td>
                    <td class="black" onclick="placeBet('13')">13</td>
                    <td class="red" onclick="placeBet('16')">16</td>
                    <td class="red" onclick="placeBet('19')">19</td>
                    <td class="black" onclick="placeBet('22')">22</td>
                    <td class="red" onclick="placeBet('25')">25</td>
                    <td class="black" onclick="placeBet('28')">28</td>
                    <td class="black" onclick="placeBet('31')">31</td>
                    <td class="red" onclick="placeBet('34')">34</td>
                    <td class="outside label">2 to 1</td>
                </tr>

                <!-- Dozens -->
                <tr>
                    <td colspan="2" class="label"></td>
                    <td colspan="4" class="outside" onclick="placeBet('1st12')">1st 12</td>
                    <td colspan="4" class="outside" onclick="placeBet('2nd12')">2nd 12</td>
                    <td colspan="4" class="outside" onclick="placeBet('3rd12')">3rd 12</td>
                </tr>

                <!-- Outside bets -->
                <tr>
                    <td colspan="2" class="label"></td>
                    <td colspan="2" class="outside" onclick="placeBet('1to18')">1 to 18</td>
                    <td colspan="2" class="outside" onclick="placeBet('Even')">Even</td>
                    <td colspan="2" class="red" onclick="placeBet('Red')">Red</td>
                    <td colspan="2" class="black" onclick="placeBet('Black')">Black</td>
                    <td colspan="2" class="outside" onclick="placeBet('Odd')">Odd</td>
                    <td colspan="2" class="outside" onclick="placeBet('19to36')">19 to 36</td>
                </tr>

            </table>


        </div>

        <!-- Right: Wheel + Controls -->
        <div class="flex flex-col items-center gap-10 w-full lg:w-80">

            <!-- Wheel Placeholder -->
            <div class="flex justify-center">
                <div class="w-64 h-64 rounded-full border-4 border-white 
                            bg-gradient-to-br from-red-700 to-red-900 
                            shadow-[0_0_25px_rgba(255,255,255,0.3)]
                            flex items-center justify-center text-center font-bold text-xl">
                    WHEEL<br/>GOES<br/>HERE
                </div>
            </div>

            <!-- Bet Controls -->
            <div class="w-full bg-[#033016] border-2 border-white rounded-xl p-6 shadow-xl">

                <h2 class="text-center text-2xl font-bold mb-4">Bet Amount</h2>

                <!-- Chips -->
                <div class="flex justify-between mb-6">

                   <h4>Bets Move in increments of 5</h4>

                </div>

                <!-- Spin Button -->
                <button class="w-full py-4 bg-red-700 border-2 border-white rounded-lg 
                               text-2xl font-bold shadow-xl hover:bg-red-600 transition"
                        onclick="spinWheel()">
                    SPIN
                </button>

            </div>

        </div>

    </div>

</div>